@model IEnumerable<ShoeShopMVCAdmin.Models.tblGender>

@{
    ViewBag.Title = "GenderList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Gender List</h2>
<br />
<p>
    @Html.ActionLink("Add Gender", "CreateGender", "Admin", null, new { @class = "btn btn-success" })
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.GenderType)
            </th>
            <th>Edit</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count() > 0)
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.GenderType)
                    </td>
                    <td>
                        
                        <a href="@Url.Action("EditGender", "Admin", new { id = item.GenderId })"><i class="fas fa-edit"></i> </a>

                    </td>
                    <td>
                        @Html.ActionLink("Delete", "DeleteGender", new { id = item.GenderType }, new { onclick = "return confirm('Are you sure you wish to delete this Brand ?');" })
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td style="text-align:end;">No Record Found</td>
            </tr>
        }
    </tbody>

</table>
