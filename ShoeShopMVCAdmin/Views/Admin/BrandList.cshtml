@model IEnumerable<ShoeShopMVCAdmin.Models.tblBrand>

@{
    ViewBag.Title = "BrandList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>BrandList</h2>
<br />
<p>
    @Html.ActionLink("Add Brand", "CreateBrand","Admin",null,new {@class= "btn btn-success" })
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.BrandName)
            </th>
            <th>Edit</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count() > 0)
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.BrandName)
                    </td>
                    <td>
                        @*@Html.ActionLink("Edit", "EditBrand", new { id = item.BrandId })*@
                        <a href="@Url.Action("EditBrand", "Admin", new { id = item.BrandId })"><i class="fas fa-edit"></i> </a>

                    </td>
                    <td>
                        @Html.ActionLink("Delete", "DeleteBrand", new { id = item.BrandId }, new { onclick = "return confirm('Are you sure you wish to delete this Brand ?');" })
                       </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td style="text-align:end;">No Record Found</td>
            </tr>
        }
    </tbody>

</table>

