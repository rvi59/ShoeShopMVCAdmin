<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/AdminStyle.css" rel="stylesheet" />
    @Scripts.Render("~/bundles/jquery")
</head>
<body>

    <div>
        <div>
            <div class="wrapper">
                <!-- Sidebar  -->


                <nav id="sidebar">
                    <div class="sidebar-header">
                        <h3>ShoeWeb Admin</h3>
                        <button type="button" id="sidebarCollapse1" class="btn text-sidebar bg-turbo-yellow">
                            <i class="fas fa-align-left"></i>
                            <span></span>
                        </button>
                    </div>
                    <ul class="list-unstyled components">
                        <p>Welcome <asp:Label ID="lbluser" runat="server" Text="" Font-Bold="true"></asp:Label></p>
                        <li>
                           
                            <a href="@Url.Action("Dashboard", "Admin")"><i class="fas fa-tachometer-alt"></i>&nbsp;&nbsp;Dashboard</a>

                        </li>
                        <li>
                            <a href="#brandSubmenu" data-toggle="collapse" aria-expanded="false" class="dropdown-toggle"><i class="fab fa-bandcamp"></i><span>&nbsp;&nbsp;&nbsp;Brand</span></a>
                            <ul class="collapse list-unstyled" id="brandSubmenu">

                                <li>

                                    @Html.ActionLink("Brand List", "BrandList", "Admin")
                                </li>
                                <li>
                                    @Html.ActionLink("Add Brand", "CreateBrand", "Admin")
                                </li>

                            </ul>
                        </li>

                        <li>
                            <a href="#categorySubmenu" data-toggle="collapse" aria-expanded="false" class="dropdown-toggle"><i class="fas fa-sitemap"></i><span>&nbsp;&nbsp;&nbsp;Category</span></a>
                            <ul class="collapse list-unstyled" id="categorySubmenu">

                                <li>

                                    @Html.ActionLink("Category List", "CategoryList", "Admin")
                                </li>
                                <li>
                                    @Html.ActionLink("Add Category", "CreateCategory", "Admin")
                                </li>
                            </ul>
                        </li>

                        <li>
                            <a href="#sizeSubmenu" data-toggle="collapse" aria-expanded="false" class="dropdown-toggle"><i class="fas fa-weight"></i><span>&nbsp;&nbsp;&nbsp;Size</span></a>
                            <ul class="collapse list-unstyled" id="sizeSubmenu">

                                <li>
                                    @Html.ActionLink("Size List", "SizeList", "Admin")
                                </li>
                                <li>
                                    @Html.ActionLink("Add Size", "CreateSize", "Admin")
                                </li>

                            </ul>
                        </li>

                        <li>
                            <a href="#GenderSubmenu" data-toggle="collapse" aria-expanded="false" class="dropdown-toggle"><i class="fas fa-venus-mars"></i><span>&nbsp;&nbsp;&nbsp;Gender</span></a>
                            <ul class="collapse list-unstyled" id="GenderSubmenu">

                                <li>
                                    @Html.ActionLink("Gender List", "GenderList", "Admin")
                                </li>
                                <li>
                                    @Html.ActionLink("Add Gender", "CreateGender", "Admin")
                                </li>

                            </ul>
                        </li>


                        <li>
                            <a href="#productSubmenu" data-toggle="collapse" aria-expanded="false" class="dropdown-toggle"><i class="fas fa-cart-arrow-down"></i><span>&nbsp;&nbsp;&nbsp;Product</span></a>
                            <ul class="collapse list-unstyled" id="productSubmenu">
                                
                                <li>
                                    @Html.ActionLink("Product List", "ProductList", "Admin")
                                </li>
                                <li>
                                    @Html.ActionLink("Add Product", "CreateProduct", "Admin")
                                </li>

                            </ul>
                        </li>

                        <li>
                            <a href="#"><i class="fas fa-cog"></i><span>&nbsp;&nbsp;&nbsp;Setting</span></a>
                        </li>
                    </ul>

                    <ul class="list-unstyled CTAs">
                        <li>
                            @Html.ActionLink("Logout", "Logout", "Account", new { id = "btnLogout" })


                        </li>
                    </ul>
                </nav>

                <!-- Page Content  -->

                <div id="content">
                    <nav class="navbar navbar-expand-lg navbar-light bg-light">
                        <div class="container-fluid">
                            <button type="button" id="sidebarCollapse" class="btn text-sidebar bg-turbo-yellow">
                                <i class="fas fa-align-left"></i>
                                <span></span>
                            </button>
                            <button class="btn btn-dark d-inline-block d-lg-none ml-auto" type="button" data-toggle="collapse"
                                    data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                                    aria-expanded="false" aria-label="Toggle navigation">
                                <i class="fas fa-align-justify"></i>
                            </button>
                            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                                <ul class="nav navbar-nav ml-auto">
                                    <li class="nav-item active">
                                        <img src="~/Images/profile.png" height="25" width="25" alt="Alternate Text" />
                                    </li>
                                    <li class="nav-item">
                                        @Html.ActionLink("Logout", "Logout", "Account", new { id = "btnLogout" })
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </nav>
                    <br />
                    @RenderBody()
                   
                </div>
            </div>
        </div>
    </div>



    
    @Scripts.Render("~/bundles/bootstrap") 
    @Scripts.Render("~/bundles/myCustom")
    @Scripts.Render("~/bundles/datatable")
    @RenderSection("scripts", required: false)
</body>
</html>
